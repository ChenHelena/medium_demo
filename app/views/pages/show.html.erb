<section class="columns story-content">
  <section class="column is-offset-3 is-6">
    <h1 class="title"><%= @story.title %></h1>

    <span class="profile">
      <%= avatar(current_user,size: { x: 50, y: 50 }) %>
      <span class="username"><%= @story.user.username %></span>
      <a href="#" class="follow-button">Follow</a>
    </span>

    <article class="content">
      <%= cover_image(@story,size:{x: '1000' ,y:'500'}) %>

      <p>
      <%= simple_format(@story.content) %>
      </p>
      <footer data-controller="story">
        <%= link_to '#' , class: 'btn btn-primary like_btn' , data: { action: 'story#toggleLike', slug: @story.slug } do
          %>
          <i class="fa-regular fa-thumbs-up" data-story-target="likeIcon"></i>
          <span data-story-target="likesCount"><%= @story.likes_count %></span>
        <% end %>
      </footer>
    </article>
    <hr>
    <section class="comments">
      <h2>留言</h2>
      <%= render 'comment_area', story:@story, comment: @comment %>
      <section class="comment-list">
        <%= render partial: 'comment', collection: @comments %>
      </section>
    </section>
  </section>
</section>